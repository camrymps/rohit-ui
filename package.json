{
  "name": "rohit-ui",
  "version": "0.1.0",
  "description": "A Windows 98-style React UI kit with silly Rohit-themed features",
  "author": "Michael Scott",
  "license": "MIT",
  "type": "module",
  "main": "dist/rohit-ui.umd.js",
  "module": "dist/rohit-ui.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/rohit-ui.es.js",
      "require": "./dist/rohit-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "require": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    },
    "./components/Button": {
      "import": "./dist/components/Button/index.js",
      "require": "./dist/components/Button/index.js",
      "types": "./dist/components/Button/index.d.ts"
    },
    "./components/Checkbox": {
      "import": "./dist/components/Checkbox/index.js",
      "require": "./dist/components/Checkbox/index.js",
      "types": "./dist/components/Checkbox/index.d.ts"
    },
    "./components/Radio": {
      "import": "./dist/components/Radio/index.js",
      "require": "./dist/components/Radio/index.js",
      "types": "./dist/components/Radio/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "windows98",
    "retro",
    "styled-components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelscott/rohit-ui.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "deploy:docs": "npm run build:docs && gh-pages -d docs-dist"
  },
  "dependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "react-router-dom": "^7.6.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=5.0.0"
  }
}
